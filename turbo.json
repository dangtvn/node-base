{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
      "build": {
        "outputs": ["dist/**", ".next/**", "public/dist/**"],
        "dependsOn": ["^build"],
        "env": ["NEXT_PUBLIC_API_HOST"]
      },
      "test": {
        "outputs": ["coverage/**"],
        "dependsOn": []
      },
      "lint": {
        "dependsOn": ["^build"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "clean": {
        "cache": false
      },
      "start:prod": {
        "cache": true,
        "persistent": true
      },
      "proto:gen-user": {
        "cache": true
      }
    }
  }