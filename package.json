{
  "name": "node-kit",
  "version": "0.0.1",
  "description": "Microservices with mono-repository",
  "author": "Thao Dang",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "proto:gen-user": "turbo proto:gen-user",
    "proto:gen-auth": "turbo proto:gen-auth",
    "build": "turbo run build",
    "build-graph": "turbo run build --graph",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "start:prod": "turbo run start:prod",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.13",
    "@nestjs/config": "^2.3.1",
    "@nestjs/typeorm": "^9.0.1",
    "@types/js-yaml": "^4.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "js-yaml": "^4.1.0",
    "pg": "^8.10.0",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "protoc-gen-ts": "^0.8.5",
    "ts-proto": "^1.136.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "api",
    "proto",
    "services/*"
  ]
}
